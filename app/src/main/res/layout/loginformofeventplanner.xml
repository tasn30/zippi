<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".RegisterPlanner">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Select a photo"
                android:paddingTop="40dp"
                android:background="@drawable/side_nav_bar"
                android:textSize="20sp"
                android:onClick="gotogallery"
                android:textColor="#000"
                />

           
            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/side_nav_bar"
                android:layout_height="400dp"
                android:id="@+id/logo"
                android:onClick="gotogallery"
                android:src="@android:drawable/ic_menu_gallery" />



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:id="@+id/organisationname"
                android:textSize="20dp"
                android:hint="ORGANISATION NAME"
                android:gravity="center_horizontal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:id="@+id/name"
                android:textSize="20dp"
                android:hint="ENTER NAME"
                android:gravity="center_horizontal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="phone"
                android:hint="PHONE NUMBER"
                android:textSize="20dp"
                android:id="@+id/phone"
                android:gravity="center_horizontal" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:textSize="20dp"
                android:ems="10"
                android:id="@+id/email"
                android:layout_gravity="center_horizontal"
                android:hint="ENTER EMAIL ID"
                android:gravity="center_horizontal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Enter Address"
                android:textSize="20dp"
                android:id="@+id/address"
                android:gravity="center_horizontal" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:hint="Enter Password"
                android:textSize="20dp"
                android:id="@+id/password"
                android:gravity="center_horizontal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/events"
                android:layout_gravity="center_horizontal"
                android:hint="Number Of events done"
                android:gravity="center_horizontal" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:layout_width="387dp"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textSize="40dp"
                android:background="#3F51B5"
                android:id="@+id/button1"
                android:textColor="#f2e9e9"
                android:onClick="submit"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
